                        <Button mnemonicParsing="false" onAction="#fightBotton" prefHeight="25.0" prefWidth="85.0" text="Fight" GridPane.columnIndex="3" GridPane.rowIndex="2" />
                        <Button mnemonicParsing="false" onAction="#searchGoldButton" prefHeight="25.0" prefWidth="113.0" text="Search" GridPane.columnIndex="5" GridPane.rowIndex="2" />
                        <Button mnemonicParsing="false" onAction="#runAwayButton" prefHeight="25.0" prefWidth="85.0" text="Run" GridPane.columnIndex="4" GridPane.rowIndex="2" />
                        <Button mnemonicParsing="false" onAction="#sleepButton" prefHeight="25.0" prefWidth="87.0" text="Sleep" GridPane.columnIndex="6" GridPane.rowIndex="2" />
                    </children>
                </GridPane>
            </bottom>
            <center>
                <TextArea fx:id="textLog" prefHeight="115.0" prefWidth="230.0" BorderPane.alignment="CENTER" />
            </center>
            <right>
                <VBox prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
               <children>
                  <Label alignment="CENTER" text="Monster Stats" textAlignment="CENTER" underline="true" />
                  <Label fx:id="monsterHitPointsLabel" text="Hit Points =" />
                  <Label fx:id="monsterStrengthLabel" text="Strength = " />
                  <Label fx:id="monsterDexterityLabel" text="Dexterity =" />
                  <Label fx:id="monsterIntelligenceLabel" text="Intelligence =" />
               </children>
                </VBox>
            </right>
        </BorderPane>
      <Label text="Label" />
